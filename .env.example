#RABBITMQ
RABBITMQ_HOST=
RABBITMQ_PORT=
RABBITMQ_USERNAME=
RABBITMQ_PASSWORD=

# Discord Alert Configuration
DISCORD_WEBHOOK_URL=

# Monitoring Configuration
COLLECTION_INTERVAL=15
ALERT_COOLDOWN_MINUTES=5
HEALTH_CHECK_ENABLED=true

# Production Settings
MONITORING_MODE=remote
READ_ONLY_MODE=true
TARGET_SYSTEM_NAME=GPS-Production-Server
DEPLOYMENT_ENVIRONMENT=production

# Queue Configuration
QUEUE_CONFIG_FILE=config/queues.json
CONFIG_VALIDATION_MODE=basic

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=true

# Health Check Configuration
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_INTERVAL=60

# Alert Filtering
MINIMUM_ALERT_SEVERITY=warning
ENABLE_RECOVERY_ALERTS=true
ENABLE_LIFECYCLE_ALERTS=true